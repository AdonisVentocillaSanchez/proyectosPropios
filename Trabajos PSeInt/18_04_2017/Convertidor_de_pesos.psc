Proceso Convertidor_de_pesos
	Definir gr,mg,kg,onz,lb Como Real
	Escribir "Ingrese la cantidad en gramos"
	Leer gr
	mg=gr*1000
	kg=gr/1000
	onz=gr/28.35
	lb=onz/16
	Escribir "En miligramos es: " mg
	Escribir "En kilogramos es: " kg
	Escribir "En onzas es: " onz
	Escribir "En libras es: " lb
	

	
FinProceso
